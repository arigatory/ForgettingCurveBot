<Window x:Class="ForgettingCurveBot.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ForgettingCurveBot.UI"
        xmlns:view="clr-namespace:ForgettingCurveBot.UI.View"
        mc:Ignorable="d"
        Title="ForgettingCurveBot" Height="450" Width="800" FontSize="20">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu Grid.ColumnSpan="2" FontSize="20">
            <MenuItem Header="Добавить">
                <MenuItem Header="Новый пользователь" Command="{Binding CreateNewTelegramUserCommand}"/>
            </MenuItem>
        </Menu>

        <view:NavigationView Grid.Row="1" 
                             DataContext="{Binding NavigationViewModel}"/>
        <view:TelegramUserDetailView Grid.Column="1"
                                     Grid.Row="1"
                                     DataContext="{Binding TelegramUserDetailViewModel}"/>
       
    </Grid>
</Window>
